<Window x:Class="WpfApp3classBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3classBook"
        mc:Ignorable="d"
        Title="Cписок книг" Height="600" Width="800">
    <Grid>
        <ScrollViewer>
        <StackPanel Name="BooksStackPanel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
        </StackPanel>
        </ScrollViewer>
        <StackPanel Name="DetailsStackPanel" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Name="DetailsTitle" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBlock Name="DetailsGenre" Margin="0,5,0,0"/>
            <TextBlock Name="DetailsYear" Margin="0,5,0,0"/>
            <TextBlock Name="DetailsDescription" Margin="0,5,0,0"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button Content="Назад" Name="PrevButton" Click="PrevButton_Click" Margin="5"/>
            <Button Content="Вперед" Name="NextButton" Click="NextButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
